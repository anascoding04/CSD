<Window x:Class="WPFCSDProject.Views.LeaderboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Leaderboard" 
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
               Background="#2C3E50" 
               Padding="20">
            <Grid>
                <TextBlock Text="Top 5 Leaderboard" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
                <Button Content="Back to Dashboard" 
                       Click="BackButton_Click"
                       HorizontalAlignment="Right"
                       Padding="15,8"
                       Background="#3498DB"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       FontSize="14">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Leaderboard Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto" 
                     Margin="20">
            <StackPanel x:Name="LeaderboardStackPanel">
                <!-- Leaderboard will be populated dynamically -->
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Info -->
        <Border Grid.Row="2" 
               Background="#ECF0F1" 
               Padding="15"
               BorderBrush="#BDC3C7"
               BorderThickness="0,1,0,0">
            <TextBlock Text="Leaderboard shows top 5 students per subject based on total points earned." 
                      FontSize="12" 
                      Foreground="#7F8C8D"
                      HorizontalAlignment="Center"
                      TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>

