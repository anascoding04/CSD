<Window x:Class="WPFCSDProject.Views.TestHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test History" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Test Name -->
        <TextBlock x:Name="TestNameTextBlock" Grid.Row="0" FontSize="24" FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Completion Date -->
        <TextBlock Grid.Row="1" Text="Completion Date:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock x:Name="CompletionDateTextBlock" Grid.Row="2" FontSize="14" 
                   Margin="20,0,0,15"/>

        <!-- Number of Questions -->
        <TextBlock Grid.Row="3" Text="Number of Questions:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock x:Name="QuestionsCountTextBlock" Grid.Row="4" FontSize="14" 
                   Margin="20,0,0,15"/>

        <!-- Percentage -->
        <TextBlock Grid.Row="5" Text="Percentage Correct:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock x:Name="PercentageTextBlock" Grid.Row="6" FontSize="14" 
                   Margin="20,0,0,15"/>

        <!-- Points Earned -->
        <TextBlock Grid.Row="7" Text="Total Points Earned:" FontWeight="Bold" Margin="0,0,0,5"/>
        <StackPanel Grid.Row="7" Orientation="Horizontal" Margin="20,0,0,15">
            <TextBlock x:Name="PointsTextBlock" FontSize="16" FontWeight="Bold" 
                       Foreground="#4CAF50"/>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="8" Content="Close" Width="100" Height="35" 
                HorizontalAlignment="Right" Margin="0,20,0,0" Click="CloseButton_Click"/>
    </Grid>
</Window>

