<UserControl x:Class="WPFCSDProject.Views.Controls.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="Register" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="#2C3E50" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,30"/>

            <TextBlock x:Name="ErrorMessageTextBlock" 
                      Foreground="Red" 
                      TextWrapping="Wrap" 
                      Margin="0,0,0,10"
                      Visibility="Collapsed"
                      FontSize="12"/>

            <TextBlock Text="Student Number" 
                      FontSize="14" 
                      FontWeight="SemiBold" 
                      Foreground="#34495E" 
                      Margin="0,10,0,5"/>
            <TextBox x:Name="StudentNumberTextBox" 
                    FontSize="14" 
                    Padding="10" 
                    Margin="0,0,0,15"
                    BorderBrush="#BDC3C7"
                    BorderThickness="1"/>

            <TextBlock Text="First Name" 
                      FontSize="14" 
                      FontWeight="SemiBold" 
                      Foreground="#34495E" 
                      Margin="0,10,0,5"/>
            <TextBox x:Name="FirstNameTextBox" 
                    FontSize="14" 
                    Padding="10" 
                    Margin="0,0,0,15"
                    BorderBrush="#BDC3C7"
                    BorderThickness="1"/>

            <TextBlock Text="Last Name" 
                      FontSize="14" 
                      FontWeight="SemiBold" 
                      Foreground="#34495E" 
                      Margin="0,10,0,5"/>
            <TextBox x:Name="LastNameTextBox" 
                    FontSize="14" 
                    Padding="10" 
                    Margin="0,0,0,15"
                    BorderBrush="#BDC3C7"
                    BorderThickness="1"/>

            <TextBlock Text="Course Title" 
                      FontSize="14" 
                      FontWeight="SemiBold" 
                      Foreground="#34495E" 
                      Margin="0,10,0,5"/>
            <TextBox x:Name="CourseTitleTextBox" 
                    FontSize="14" 
                    Padding="10" 
                    Margin="0,0,0,15"
                    BorderBrush="#BDC3C7"
                    BorderThickness="1"/>

            <TextBlock Text="Password" 
                      FontSize="14" 
                      FontWeight="SemiBold" 
                      Foreground="#34495E" 
                      Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                        FontSize="14" 
                        Padding="10" 
                        Margin="0,0,0,15"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"/>

            <TextBlock Text="Confirm Password" 
                      FontSize="14" 
                      FontWeight="SemiBold" 
                      Foreground="#34495E" 
                      Margin="0,10,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" 
                        FontSize="14" 
                        Padding="10" 
                        Margin="0,0,0,20"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"/>

            <Button x:Name="RegisterButton" 
                   Content="Register" 
                   Click="RegisterButton_Click"
                   Background="#3498DB"
                   FontWeight="SemiBold"
                   Padding="15,10"
                   Margin="0,10,0,10">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Separator Margin="0,20,0,20"/>

            <TextBlock Text="Already have an account?" 
                      FontSize="14" 
                      Foreground="#7F8C8D" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,10"/>

            <TextBlock x:Name="SignInText"
                      Text="Sign In" 
                      FontSize="14" 
                      Foreground="#3498DB"
                      HorizontalAlignment="Center"
                      Cursor="Hand"
                      MouseDown="SignInText_MouseDown">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="TextDecorations" Value="Underline"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>

