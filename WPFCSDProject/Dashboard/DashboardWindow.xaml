<Window x:Class="WPFCSDProject.Dashboard.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Student Dashboard" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Sign Out -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <Grid>
                <TextBlock Text="Student Dashboard" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
                <Button Content="Sign Out" 
                       Click="SignOutButton_Click"
                       HorizontalAlignment="Right"
                       Padding="15,8"
                       Background="#E74C3C"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       FontSize="14"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <!-- Welcome Message -->
                <TextBlock x:Name="WelcomeTextBlock" 
                          FontSize="20" 
                          Foreground="#2C3E50"
                          Margin="0,0,0,30"/>

                <!-- Progress Metrics Section -->
                <Border Background="White" 
                       BorderBrush="#BDC3C7" 
                       BorderThickness="1" 
                       CornerRadius="5" 
                       Padding="20" 
                       Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Progress Metrics" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50"
                                  Margin="0,0,0,20"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Total Points" 
                                          FontSize="16" 
                                          Foreground="#7F8C8D"
                                          Margin="0,0,0,5"/>
                                <TextBlock x:Name="TotalPointsTextBlock" 
                                          FontSize="32" 
                                          FontWeight="Bold" 
                                          Foreground="#3498DB"
                                          Text="0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Average Percentage" 
                                          FontSize="16" 
                                          Foreground="#7F8C8D"
                                          Margin="0,0,0,5"/>
                                <TextBlock x:Name="AveragePercentageTextBlock" 
                                          FontSize="32" 
                                          FontWeight="Bold" 
                                          Foreground="#27AE60"
                                          Text="0%"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Tests Completed" 
                                          FontSize="16" 
                                          Foreground="#7F8C8D"
                                          Margin="0,0,0,5"/>
                                <TextBlock x:Name="TestsCompletedTextBlock" 
                                          FontSize="32" 
                                          FontWeight="Bold" 
                                          Foreground="#9B59B6"
                                          Text="0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Grade Graph -->
                        <Border Background="#ECF0F1" 
                               Height="200" 
                               Margin="0,20,0,0"
                               CornerRadius="5"
                               Padding="10">
                            <Canvas x:Name="GradeGraphCanvas" 
                                   Width="700" 
                                   Height="180"
                                   Background="Transparent"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Leaderboard Section -->
                <Border Background="White" 
                       BorderBrush="#BDC3C7" 
                       BorderThickness="1" 
                       CornerRadius="5" 
                       Padding="20" 
                       Margin="0,0,0,20">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                      Text="Top 5 Leaderboard" 
                                      FontSize="22" 
                                      FontWeight="Bold" 
                                      Foreground="#2C3E50"
                                      VerticalAlignment="Center"/>
                            
                            <Button Grid.Column="1"
                                   Content="View Full Leaderboard" 
                                   Click="ViewLeaderboardButton_Click"
                                   Padding="12,6"
                                   Background="#3498DB"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   FontSize="13">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        
                        <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="LeaderboardStackPanel"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Test Lists Section -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- To-Do Tests -->
                    <Border Grid.Column="0" 
                           Background="White" 
                           BorderBrush="#BDC3C7" 
                           BorderThickness="1" 
                           CornerRadius="5" 
                           Padding="20">
                        <StackPanel>
                            <TextBlock Text="Tests To-Do" 
                                      FontSize="22" 
                                      FontWeight="Bold" 
                                      Foreground="#2C3E50"
                                      Margin="0,0,0,15"/>
                            <ListBox x:Name="ToDoTestsListBox" 
                                    BorderThickness="0"
                                    SelectionChanged="ToDoTest_SelectionChanged"
                                    DisplayMemberPath="DisplayText"/>
                        </StackPanel>
                    </Border>

                    <!-- Completed Tests -->
                    <Border Grid.Column="2" 
                           Background="White" 
                           BorderBrush="#BDC3C7" 
                           BorderThickness="1" 
                           CornerRadius="5" 
                           Padding="20">
                        <StackPanel>
                            <TextBlock Text="Completed Tests" 
                                      FontSize="22" 
                                      FontWeight="Bold" 
                                      Foreground="#2C3E50"
                                      Margin="0,0,0,15"/>
                            <ListBox x:Name="CompletedTestsListBox" 
                                    BorderThickness="0"
                                    SelectionChanged="CompletedTest_SelectionChanged"
                                    DisplayMemberPath="DisplayText"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
